{
  "manifest_version": 2,
  "name": "Keyword Highlighter",
  "version": "1.2.0",
  "description": "Automatically highlights user-defined keywords in the Zotero PDF reader (Ctrl+Shift+H)",
  "author": "Jork Groenewold",
  "homepage_url": "https://github.com/quertt/zotero-keyword-highlighter",
  "icons": {
    "48": "content/icons/icon.png"
  },
  "applications": {
    "zotero": {
      "id": "keyword-highlighter@zotero-plugin",
      "update_url": "https://raw.githubusercontent.com/quertt/zotero-keyword-highlighter/main/updates.json",
      "strict_min_version": "7.0",
      "strict_max_version": "8.*"
    }
  }
}
